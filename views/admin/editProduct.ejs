<%- include('../includes/header.ejs') %>

<body>
  <%- include('../includes/headbody.ejs') %>


  <!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="jumbotron">
    <div class="container">
      <h1 class="display-3">Edit Product</h1>
      <form action="/admin/editproduct" method="POST">
        <p>
          ID: <input type="text" name="id" value="<%- product.id; %>" readonly>
        </p>
        <p>
          Name: <input type="text" name="title" value="<%- product.title; %>">
        </p>
        <p>
          Price: <input type="text" name="price" value="<%- product.price; %>">
        </p>
        <p>
          Images: <input type="text" name="images" value="<%- product.imageUrl; %>">
        </p>
        <p>
          Description: <input type="text" name="description" value="<%- product.description; %>">
        </p>

        <button class="btn btn-outline-success" type="submit">Edit</button>
        <a href="/">Back</a>
      </form>
    </div>
  </div>

  <%- include('../includes/footer.ejs');%>
</body>

</html>